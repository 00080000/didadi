page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.header {
  width: 100%;
  height: 75rpx;
  background-color: #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}


.productList{
  width: 700rpx;
  margin: 40rpx 25rpx;
  padding-top: 10rpx;
  max-height: 57%;
  overflow: auto;
}

.productCard {
  width: 650rpx;
  height: 110rpx;
  margin: 0 25rpx 40rpx 25rpx;
  border-radius: 5px;
  -webkit-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  -moz-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.cardLeft {
  height: 100%;
  display: flex;
}

.sideBar {
  width: 20rpx;
  height: 100%;
  background-color: #23394D;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.information {
  color: #23394D;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}