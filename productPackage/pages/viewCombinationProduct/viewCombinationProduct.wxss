page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.header {
  width: 100%;
  height: 75rpx;
  background-color: #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
}

.inputArea {
  width: 650rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inputArea .label{
  font-size: 27rpx;
}

.input {
  height: 50rpx;
  text-align: left;
  padding: 10rpx 25rpx;
  background-color: rgb(233, 233, 233);
  border: 1px solid lightgray;
  color: black;
  border-radius: 5px;
  font-size: 28rpx;
}


.textArea {
  width: 650rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 25rpx;
}

.textArea .label{
  font-size: 27rpx;
  margin-top: 10rpx;
}

.textArea textarea {
  height: 90%;
  padding: 15rpx 25rpx;
  text-align: left;
  background-color: rgb(233, 233, 233);
  border: 1px solid lightgray;
  color: black;
  border-radius: 5px;
  font-size: 28rpx;
}

.listArea {
  width: 650rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.listArea .label{
  font-size: 27rpx;
}

.list {
  width: 500rpx;
  height: 50rpx;
  color: black;
  border-radius: 5px;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 15rpx;
}

.imageArea {
  width: 650rpx;
  height: 100rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.imageArea .label{
  font-size: 27rpx;
}

.productImage {
  width: 450rpx;
  height: 100rpx;
  text-align: left;
  padding: 10rpx 25rpx;
}

.productImage image {
  width: 100rpx;
  height: 100rpx;
}