/* 页面整体样式 */
page {
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
  overflow: hidden; /* 防止内容超出 */
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.options {
  display: flex;
  margin: 60rpx 30rpx;
  height: 60rpx;
  justify-content: space-between;
  align-items: center;
}

.chooseOption {
  font-size: 35rpx;
  height: 60rpx;
  font-weight: bold;
  color: #23394D;
  width: 200rpx;
  text-align: left;
  text-decoration: underline 3px;
  text-underline-offset: 20rpx;
}

.divide {
  width: 5rpx;
  height: 90%;
  background-color: gray;
}

.combinationProoductOption, .temporaryProoductOption {
  font-size: 28rpx;
  height: 60rpx;
  color: #23394D;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索框样式 */
.search {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 70rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.inputArea {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 60rpx;
  padding: 5rpx 10rpx;
  background-color: white;
  border-radius: 5px;
}

.inputArea input {
  font-size: 25rpx;
  text-align: left;
  padding: 0 10rpx;
  width: 250rpx; /* 限制输入框宽度 */
}

.inputArea image {
  width: 40rpx;
  height: 40rpx;
}

form button {
  background-color: #DDDDDD;
  font-weight: lighter;
  color: #23394D;
}

/* 商品列表区域 */
.productList {
  width: 700rpx;
  margin: 40rpx 25rpx;
  padding-top: 10rpx;
  max-height: 57%;
  overflow: auto;
}

/* 商品卡片 */
.productCard {
  width: 650rpx;
  height: 100%;
  margin: 0 25rpx 40rpx 25rpx;
  border-radius: 10px;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
 
  overflow: hidden; /* 防止内容超出 */
}

.cardLeft {
  height: 100%;
  display: flex;
}

.sideBar {
  width: 20rpx;
  height: 130px;
  display: flex;
  background-color: #23394D;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.information {
  color: #23394D;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
  text-align: left;
  overflow: hidden;
  margin-top:7px ;
  margin-bottom: 7px;
}

.information .productInfoRow view {
  overflow: hidden;
  text-overflow: ellipsis; /* 防止文字溢出 */
  white-space: nowrap; /* 禁止换行 */
}

/* 操作区域 */
.operation {
  display: flex;
  align-items: center;
  margin: 15rpx;
}

.operation button {
  background-color: white;
  border-radius: 5px;
  border: 1px solid #23394D;
  font-size: 20rpx;
  font-weight: lighter;
  color: #23394D;
  padding: 0rpx 25rpx;
  margin-right: 20rpx;
}

.operation image {
  width: 40rpx;
  height: 40rpx;
}

/* 底部导航栏 */
.tabBar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6.5%;
  border-top: 1px solid #23394D;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.selectedNavigateBar, .notSelectedNavigateBar {
  width: 25%;
  height: 100%;
  font-size: 22rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 1%;
  margin-top: 1%;
}

.selectedNavigateBar {
  color: #23394D;
}

.notSelectedNavigateBar {
  color: gray;
}

.selectedNavigateBar image {
  height: 60%;
  width: 60rpx;
  margin-bottom: 1%;
}

.notSelectedNavigateBar image {
  height: 45%;
  width: 40rpx;
  margin-bottom: 1%;
}
