<view class="container">
  <!-- 上方的Logo与文字提示部分 -->
  <view class="topArea">
    <view>
      <header></header>
      <view class="options">
        <view class="chooseOption">
          单商品库
        </view>
        <view class="divide" style="margin-right: 20rpx;"></view>
        <view class="combinationProoductOption" bind:tap="goToCombinationProoduct">
          组合商品库
        </view>
        <view class="divide" style="margin-left: 20rpx;"></view>
        <view class="temporaryProoductOption" bind:tap="goToTemporaryProoduct">
          临时商品库
        </view>
      </view>
    </view>
    <view class="search">
      <form catchsubmit="inputProduct">
        <view style="display: flex; align-items: center;">
          <view class="inputArea">
            <image src="/static/search.png"></image>
            <view style="display: flex; align-items: center;">
              <input model:value="{{keyword}}" bindinput="inputProduct" style="width: 250rpx;" placeholder="输入名称/编码/品牌" />
            </view>
          </view>
          <button formType="submit" size="mini" style="font-size: 32rpx;">搜索</button>
        </view>
      </form>
    </view>
  </view>

  <!-- 商品列表区域 -->
  <view class="productList">
    <view class="productCard" wx:for="{{filterProduct}}" wx:key="id" wx:for-item="item">
      <view class="cardLeft">
        <view class="sideBar"></view>
        <view class="information">
          <view style="font-size: 30rpx;font-weight: bold;">{{item.productName}}</view>
          <view class="productInfoRow">
            <view style="font-size: 24rpx;color: rgb(85, 81, 81);">型号: {{item.model || '无'}}</view>
            <view style="font-size: 24rpx;color: rgb(85, 81, 81);">品牌: {{item.brand || '无'}}</view>
          </view>
          <view class="productInfoRow">
            <view style="font-size: 24rpx;color: rgb(197, 33, 33);">价格: {{item.unitPrice || '0.00'}}元</view>
            <view style="font-size: 24rpx;color: rgb(85, 81, 81);">状态: {{item.status === '1' ? '有效' : '无效'}}</view>
          </view>
          <view class="productInfoRow">
            <view style="font-size: 24rpx;color: rgb(85, 81, 81);">创建时间: {{item.createTime || '无'}}</view>
            <view style="font-size: 24rpx;color: rgb(85, 81, 81);">类别: {{item.className || '未分类'}}</view>
          </view>
        </view>
      </view>
      <view class="operation">
        <button size="mini" bind:tap="goToViewProduct" data-index="{{index}}" >查看</button>
        <image src="/static/delete.png" bind:tap="confirmDelete" data-index="{{index}}"></image>
      </view>
    </view>
  </view>

  <!-- 底部导航栏 -->
  <view class="tabBar">
    <view class="notSelectedNavigateBar" bind:tap="navigateToMain">
      <image mode="heightFix" src="/static/home-gray.png"></image>
      首页
    </view>
    <view class="notSelectedNavigateBar" bind:tap="navigateToPrice">
      <image mode="heightFix" src="/static/price-gray.png"></image>
      询报价
    </view>
    <view class="selectedNavigateBar">
      <image mode="heightFix" src="/static/product-blue.png"></image>
      商品
    </view>
    <view class="notSelectedNavigateBar" bind:tap="navigateToMerchant">
      <image mode="heightFix" src="/static/merchant-gray.png"></image>
      商家
    </view>
  </view>
</view>
