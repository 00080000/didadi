page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.options {
  display: flex;
  margin: 60rpx 30rpx;
  height: 60rpx;
  justify-content: space-between;
  align-items: center;
}

.chooseOption {
  font-size: 35rpx;
  height: 60rpx;
  font-weight: bold;
  color: #23394D;
  width: 200rpx;
  text-decoration: underline 3px;
  text-underline-offset: 20rpx;
  text-align: right;
}

.divide {
  width: 5rpx;
  height: 90%;
  background-color: gray;
}

.combinationProoductOption {
  font-size: 28rpx;
  height: 60rpx;
  color: #23394D;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.singleProoductOption {
  font-size: 28rpx;
  height: 60rpx;
  color: #23394D;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.search {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 70rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.searchText {
  margin-left: 25rpx;
  font-size: 30rpx;
}

.inputArea {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 60rpx;
  padding: 5rpx 10rpx;
  background-color: white;
  border-radius: 5px;
}

.inputArea input {
  font-size: 25rpx;
  text-align: left;
  padding: 0 10rpx;
}

.inputArea image {
  width: 40rpx;
  height: 40rpx;
}

form button {
  background-color: #DDDDDD;
  font-weight: lighter;
  color: #23394D;
}

.productList{
  width: 700rpx;
  margin: 40rpx 25rpx;
  padding-top: 10rpx;
  max-height: 57%;
  overflow: auto;
}

.productCard {
  width: 650rpx;
  height: 110rpx;
  margin: 0 25rpx 40rpx 25rpx;
  border-radius: 5px;
  -webkit-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  -moz-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.cardLeft {
  height: 100%;
  display: flex;
}

.sideBar {
  width: 20rpx;
  height: 100%;
  background-color: #23394D;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.information {
  color: #23394D;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}

.operation {
  display: flex;
  align-items: center;
  margin:15rpx;
}

.operation button {
  background-color: white;
  border-radius: 5px;
  border: 1px solid #23394D;
  font-size: 20rpx;
  font-weight: lighter;
  color: #23394D;
  padding: 0rpx 25rpx;
  margin-right: 20rpx;
}

.operation image {
  width: 40rpx;
  height: 40rpx;
}

.tabBar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6.5%;
  border-top: 1px solid #23394D;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.selectedNavigateBar {
  width: 25%;
  height: 100%;
  color: #23394D;
  font-size: 22rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 1%;
  margin-top: 1%;
}

.notSelectedNavigateBar {
  width: 25%;
  height: 100%;
  color: gray;
  font-size: 22rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 1%;
  margin-top: 1%;
}

.selectedNavigateBar image {
  height: 60%;
  width: 60rpx;
  margin-bottom: 1%;
}

.notSelectedNavigateBar image {
  height: 45%;
  width: 40rpx;
  margin-bottom: 1%;
}