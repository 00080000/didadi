/* quotePackage/pages/viewRecievedQuotation/viewRecievedQuotation.wxss */
page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.information {
  text-align: left;
  margin-left: 30rpx;
  font-size: 35rpx;
  font-weight: bolder;
  color: #23394D;
}

.operation {
  margin: 20rpx 50rpx 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.operation button {
  background-color: #DDDDDD;
  border: 1px solid #23394D;
  border-radius: 5px;
  color: #23394D;
  font-size: 23rpx;
  font-weight: lighter;
  padding: 5rpx 50rpx;
  margin-right: 30rpx;
}

.operation image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}