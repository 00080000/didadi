<view class="container">
  <!-- 上方区域 -->
  <view class="topArea">
    <header></header>
    <view class="information">
      {{item.name}}
    </view>
    <view class="operation">
      <view>
        <button size="mini" bind:tap="goToDownloadQuotation">下载文档</button>
        <button size="mini" bind:tap="goToDownloadAttachment">查看附件</button>
      </view>
      <view bind:tap="printQuotation">
        <image src="/static/print.png" mode="widthFix"></image>
      </view>
    </view>
  </view>

  <!-- 报价单内容区域 -->
  <view class="contentArea">
    <!-- 头部文本 -->
    <view class="headText" wx:if="{{item.headText}}" 
      bindtap="openHtmlViewer" data-html="{{item.headText}}">
      <rich-text nodes="{{item.headText}}"></rich-text>
    </view>

    <!-- 项目信息 -->
    <view class="projectInfo">
      <view class="infoRow">
        <view class="infoLabel">报价单号：</view>
        <view class="infoValue">{{item.quoteNo}}</view>
      </view>
      <view class="infoRow">
        <view class="infoLabel">项目名称：</view>
        <view class="infoValue">{{item.projectName}}</view>
      </view>
      <view class="infoRow">
        <view class="infoLabel">供应商：</view>
        <view class="infoValue">{{item.companyName}}</view>
      </view>
      <view class="infoRow">
        <view class="infoLabel">联系人：</view>
        <view class="infoValue">{{item.linkMan}}</view>
      </view>
      <view class="infoRow">
        <view class="infoLabel">联系电话：</view>
        <view class="infoValue">{{item.linkTel}}</view>
      </view>
      <view class="infoRow">
        <view class="infoLabel">联系邮箱：</view>
        <view class="infoValue">{{item.linkEmail}}</view>
      </view>
    </view>

    <!-- 商品表格 -->
    <view class="tableContainer" wx:if="{{tableColumns.length > 0}}">
      <view class="tableRow headerRow">
        <view class="tableCell" 
          wx:for="{{tableColumns}}" 
          wx:key="index"
          style="width: {{item.width}}; background: {{item.background}}; text-align: {{item.align}}">
          {{item.label}}
        </view>
      </view>
      <!-- 这里仅做示例，实际表格数据需根据接口返回补充 -->
      <view class="tableRow" wx:for="{{[1,2,3]}}" wx:key="index">
        <view class="tableCell" wx:for="{{tableColumns}}" wx:for-item="col" wx:key="label"
          style="width: {{col.width}}; background: {{col.background}}; text-align: {{col.align}}">
          {{index + 1}}. 示例{{col.label}}
        </view>
      </view>
    </view>

    <!-- 金额信息 -->
    <view class="priceInfo">
      <view class="totalRow">
        <view class="totalLabel">总金额：</view>
        <view class="totalValue">{{item.totalPrice}} 元</view>
      </view>
      <view class="amountRow">
        <view class="amountLabel">报价金额：</view>
        <view class="amountValue">{{item.amountPrice}} 元 (含税价)</view>
      </view>
    </view>

    <!-- 底部文本 -->
    <view class="footText" wx:if="{{item.footText}}">
      <rich-text nodes="{{item.footText}}"></rich-text>
    </view>

    <!-- 时间信息 -->
    <view class="timeInfo">
      <view class="timeRow">
        <view class="timeLabel">报价日期：</view>
        <view class="timeValue">{{item.quoteDate}}</view>
      </view>
      <view class="timeRow">
        <view class="timeLabel">有效期至：</view>
        <view class="timeValue">{{item.validityTime}}</view>
      </view>
      <view class="timeRow">
        <view class="timeLabel">创建时间：</view>
        <view class="timeValue">{{item.createTime}}</view>
      </view>
    </view>
  </view>
</view>