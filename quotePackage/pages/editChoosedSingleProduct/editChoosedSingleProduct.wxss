/* 复用全局样式，保持一致性 */
page {
    background-color: #f5f5f5;
    min-height: 100%;
  }
  
  .container {
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }
  
  .title {
    padding: 30rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    text-align: center;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
  }
  
  .info-section {
    background-color: #fff;
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
  }
  
  .edit-section {
    flex: 1;
    background-color: #fff;
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .info-item {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .info-item:last-child {
    border-bottom: none;
  }
  
  .label {
    font-size: 28rpx;
    color: #666;
    width: 200rpx;
  }
  
  .value {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    word-break: break-all;
  }
  
  .form-item {
    display: flex;
    align-items: flex-start;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .form-label {
    font-size: 28rpx;
    color: #666;
    width: 200rpx;
    padding-top: 15rpx;
  }
  
  .form-input {
    flex: 1;
  }
  
  .form-input input,
  .form-input textarea {
    width: 100%;
    font-size: 28rpx;
    color: #333;
    padding: 10rpx 0;
    border: none;
    background: transparent;
  }
  
  .form-input textarea {
    min-height: 120rpx;
    line-height: 1.5;
  }
  
  .button-group {
    display: flex;
    height: 100rpx;
    border-top: 1rpx solid #eee;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
  }
  
  .cancel-btn, .confirm-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
  }
  
  .cancel-btn {
    background-color: #fff;
    color: #333;
    border-right: 1rpx solid #eee;
  }
  
  .confirm-btn {
    background-color: #F9B712;
    color: #fff;
  }
      