/* quotePackage/pages/downloadRecievedQuotation/downloadRecievedQuotation.wxss */
page{
    text-align: center;
    width: 100%;
    height: 100%;
    background-color: white;
    position: relative;
  }
  
  /* 上方区域 */
  .topArea {
    width: 100%;
    height: 25%;
    background-color: #DDDDDD;
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .information {
    text-align: left;
    margin-left: 30rpx;
    font-size: 35rpx;
    font-weight: bolder;
    color: #23394D;
  }
  
  .fileLength {
    color: #23394D;
    font-size: 27rpx;
    text-align: left;
    margin: 20rpx 30rpx;
  }
  
  .fileList {
    width: 690rpx;
    margin-left: 20rpx;
    margin-top: 40rpx;
  }
  
  .fileCard {
    width: 100%;
    padding: 5rpx 10rpx;
    margin-top: 20rpx;
    height: 80rpx;
    border-bottom: 1px solid lightgray;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .fileCard image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 5rpx;
    cursor: pointer;
  }
  
  .fileInformation {
    display: flex;
    align-items: center;
    margin-left: 5rpx;
  }
  
  .fileInformation view {
    margin-left: 15rpx;
    font-size: 25rpx;
  }
  
  /* 保留原有的加载和错误提示样式 */
  .loading-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }
  
  .loading-content {
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .loading-spinner {
    width: 50rpx;
    height: 50rpx;
    border: 5rpx solid #eee;
    border-top-color: #007aff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20rpx;
  }
  
  .loading-text {
    font-size: 28rpx;
    color: #333;
  }
  
  .error-message {
    background-color: #fff3cd;
    color: #856404;
    padding: 20rpx;
    border-radius: 8rpx;
    text-align: center;
    font-size: 28rpx;
    margin-top: 20rpx;
  }
  
  .back-btn {
    background-color: #007aff;
    color: white;
    padding: 10rpx 30rpx;
    border-radius: 5rpx;
    font-size: 26rpx;
    margin-top: 15rpx;
    border: none;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }