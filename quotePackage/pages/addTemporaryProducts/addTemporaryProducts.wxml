<view class="container">
  <!-- 页面标题 -->
  <view class="page-title">添加临时商品</view>
  
  <!-- 表单内容 -->
  <view class="form-container">
    <!-- 商品名称（必填） -->
    <view class="form-item">
      <view class="form-label">商品名称 <text class="required">*</text></view>
      <view class="form-input">
        <input 
          placeholder="请输入商品名称" 
          model:value="{{temporaryProduct.name}}"
          data-field="name"
          bindinput="onInputChange"
        />
      </view>
    </view>
    
    <!-- 商品编码（可编辑，必填） -->
    <view class="form-item">
      <view class="form-label">商品编码 <text class="required">*</text></view>
      <view class="form-input">
        <input 
          value="{{temporaryProduct.code}}" 
          placeholder="请输入商品编码"
          data-field="code"
          bindinput="onInputChange"
        />
      </view>
    </view>
    
    <!-- 单价（必填） -->
    <view class="form-item">
      <view class="form-label">单价 <text class="required">*</text></view>
      <view class="form-input">
        <input 
          type="number" 
          placeholder="请输入单价" 
          model:value="{{temporaryProduct.price}}"
          data-field="price"
          bindinput="onInputChange"
          placeholder-style="color:#999"
        />
      </view>
    </view>
    
    <!-- 数量（必填） -->
    <view class="form-item">
      <view class="form-label">数量 <text class="required">*</text></view>
      <view class="form-input">
        <input 
          type="number" 
          placeholder="请输入数量" 
          model:value="{{temporaryProduct.number}}"
          data-field="number"
          bindinput="onInputChange"
          min="1"
        />
      </view>
    </view>
    
    <!-- 备注（必填） -->
    <view class="form-item">
      <view class="form-label">备注 <text class="required">*</text></view>
      <view class="form-input">
        <textarea 
          placeholder="请输入备注信息" 
          model:value="{{temporaryProduct.remark}}"
          data-field="remark"
          bindinput="onInputChange"
          auto-height
          style="min-height: 100rpx;"
        />
      </view>
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="btn-group">
    <view class="cancel-btn" bind:tap="cancel">
      取消
    </view>
    <view class="save-btn" bind:tap="saveTemporaryProduct">
      确定
    </view>
  </view>
</view>
