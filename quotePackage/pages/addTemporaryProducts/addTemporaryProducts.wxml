<view class="container">
  <view class="form-item">
    <view class="form-label">商品名称 <text class="required">*</text></view>
    <input 
      class="form-input" 
      placeholder="请输入商品名称" 
      value="{{temporaryProduct.name}}"
      data-field="name"
      bindinput="onInputChange"
    />
  </view>
  
  <view class="form-item">
    <view class="form-label">商品编码</view>
    <input 
      class="form-input" 
      placeholder="请输入商品编码（选填）" 
      value="{{temporaryProduct.code}}"
      data-field="code"
      bindinput="onInputChange"
    />
  </view>
  
  <view class="form-item">
    <view class="form-label">单价（元） <text class="required">*</text></view>
    <input 
      class="form-input" 
      type="number" 
      placeholder="0.00" 
      value="{{temporaryProduct.price}}"
      data-field="price"
      bindinput="onInputChange"
      step="0.01"
    />
  </view>
  
  <view class="form-item">
    <view class="form-label">数量</view>
    <input 
      class="form-input" 
      type="number" 
      placeholder="1" 
      value="{{temporaryProduct.number}}"
      data-field="number"
      bindinput="onInputChange"
      min="1"
    />
  </view>
  
  <view class="form-item">
    <view class="form-label">备注</view>
    <textarea 
      class="form-textarea" 
      placeholder="请输入备注信息（选填）" 
      value="{{temporaryProduct.remark}}"
      data-field="remark"
      bindinput="onInputChange"
      auto-height
    />
  </view>
  
 
  <view class="btn-group">
    <view class="cancel-btn" bind:tap="cancel">
      取消
    </view>
    <view class="save-btn" bind:tap="saveTemporaryProduct">
      确定
    </view>
  </view>
</view>
    