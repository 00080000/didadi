page{
    text-align: left;
    width: 100%;
    height: 100%;
    background-color: white;
    position: relative;
    padding-bottom: 100rpx; /* 为底部按钮留出空间 */
  }
  
  .page-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #23394D;
    text-align: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #eee;
    margin-bottom: 20rpx;
  }
  
  .form-container {
    padding: 20rpx 30rpx;
  }
  
  .form-item {
    display: flex;
    padding: 24rpx;
    margin-bottom: 16rpx;
    background-color: #fff;
    border-radius: 8rpx;
  }
  
  .form-label {
    width: 200rpx;
    font-size: 32rpx;
    color: #333;
    display: flex;
    align-items: center;
  }
  
  .required {
    color: #ff4d4f;
    margin-left: 4rpx;
  }
  
  .form-input {
    flex: 1;
    font-size: 32rpx;
    padding: 8rpx 0;
    border-bottom: 1px solid #eee;
  }
  
  .form-input input,
  .form-input textarea {
    width: 100%;
    padding: 10rpx;
    font-size: 30rpx;
  }
  
  .form-input textarea {
    min-height: 120rpx;
    line-height: 1.5;
  }
  
  .form-input .readonly {
    background-color: #f5f5f5;
    color: #999;
  }
  
  .btn-group {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
  
  .cancel-btn {
    width: 50%;
    height: 100%;
    font-size: 30rpx;
    background-color: whitesmoke;
    color: black;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .save-btn {
    width: 50%;
    height: 100%;
    font-size: 30rpx;
    background-color: #F9B712;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }