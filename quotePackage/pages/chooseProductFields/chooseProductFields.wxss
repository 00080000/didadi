page {
    background-color: #f5f5f5;
    min-height: 100%;
  }
  
  .container {
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }
  
  .header {
    padding: 20rpx;
    background-color: #eee;
    font-size: 26rpx;
    color: #666;
    text-align: center;
  }
  
  .fields-container {
    flex: 1;
    padding: 30rpx;
    box-sizing: border-box;
  }
  
  .section-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    margin: 30rpx 0 20rpx;
    padding-left: 10rpx;
    border-left: 4rpx solid #F9B712;
  }
  
  .field-list {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }
  
  .field-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 30rpx;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  
  .field-item.required {
    background-color: #f9f9f9;
  }
  
  .field-info {
    display: flex;
    flex-direction: column;
  }
  
  .field-name {
    font-size: 28rpx;
    color: #333;
  }
  
  .field-desc {
    font-size: 22rpx;
    color: #999;
    margin-top: 5rpx;
  }
  
  .required-tag {
    font-size: 24rpx;
    color: #fff;
    background-color: #F9B712;
    padding: 5rpx 15rpx;
    border-radius: 20rpx;
  }
  
  .checkbox {
    width: 40rpx;
    height: 40rpx;
    border: 2rpx solid #ccc;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
  }
  
  .checkbox.checked {
    background-color: #23394D;
    border-color: #23394D;
  }
  
  .button-group {
    display: flex;
    height: 100rpx;
    border-top: 1rpx solid #eee;
  }
  
  .cancel-btn, .confirm-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
  }
  
  .cancel-btn {
    background-color: #fff;
    color: #333;
  }
  
  .confirm-btn {
    background-color: #F9B712;
    color: #fff;
  }