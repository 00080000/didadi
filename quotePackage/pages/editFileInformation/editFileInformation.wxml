<view class="container">
  <view class="header">
    以下信息将显示在您对外发送的文档中，请仔细填写！
  </view>
  <view class="form">
    <view class="inputArea">
      <view class="label">文档名称</view>
      <input placeholder="请输入文档名称" class="input" style="width: 450rpx;" model:value="{{file.fileName}}"/>
    </view>
    <view class="inputArea">
      <view class="label">项目名称</view>
      <input placeholder="请输入项目名称" class="input" style="width: 450rpx;" model:value="{{file.projectName}}"/>
    </view>
    <view class="pickerArea">
      <view class="label">建档日期</view>
      <picker bindchange="dateChange" mode="date" value="{{file.time}}" class="picker-area">
        <view class="showPickerValue">
          <view>{{file.date}}</view>
          <image src="/static/date.png"></image>
        </view>
      </picker>
    </view>
    <view class="pickerArea">
      <view class="label">文档有效期</view>
      <picker bindchange="selectorChange" mode="selector" value="{{index}}" range="{{pickerValue}}"	 class="picker-area">
        <view class="showPickerValue">
          <view>{{pickerValue[index]}}</view>
          <image src="/static/downArrow-gray.png"></image>
        </view>
      </picker>
    </view>
    <view class="textArea">
      <view class="label">文档描述</view>
      <textarea placeholder="请输入文档描述" style="width: 450rpx;font-size: 27rpx;font-weight: lighter;"></textarea>
    </view>
  </view>
  <view class="buttonGroup">
    <view class="cancelButton" bind:tap="cancel">
      取消
    </view>
    <view class="confirmButton" bind:tap="confirm">
      确定
    </view>
  </view>
</view>