page{
    text-align: center;
    width: 100%;
    height: 100%;
    background-color: white;
    position: relative;
  }
  
  .header {
    width: 100%;
    height: 75rpx;
    background-color: #DDDDDD;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
  }
  
  .form {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 10rpx;
  }
  
  .inputArea {
    width: 680rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .inputArea .label{
    font-size: 27rpx;
  }
  
  .input {
    height: 50rpx;
    text-align: left;
    padding: 10rpx 25rpx;
    border: 1px solid lightgray;
    border-radius: 5px;
    font-size: 27rpx;
    font-weight: lighter;
  }
  
  .pickerArea {
    width: 680rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .pickerArea .label{
    font-size: 27rpx;
  }
  
  .picker-area {
    border: 1px solid lightgray;
    border-radius: 5px;
    width: 450rpx;
    height: 50rpx;
    padding: 10rpx 25rpx;
    font-size: 27rpx;
    font-weight: lighter;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .picker-area image {
    width: 50rpx;
    height: 50rpx;
  }
  
  .showPickerValue {
    width: 100%;
    height: 50rpx;
    text-align: left;
    border-radius: 5px;
    display: flex; 
    align-items: center;
    justify-content: space-between;
  }
  
  .textArea {
    width: 680rpx;
    height: 400rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
  }
  
  .textArea .label{
    font-size: 27rpx;
    margin-top: 10rpx;
  }
  
  .textArea textarea {
    height: 100%;
    padding: 13rpx 25rpx;
    text-align: left;
    border: 1px solid lightgray;
    border-radius: 5px;
    font-size: 27rpx;
  }
  
  .buttonGroup {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
  
  .cancelButton {
    width: 50%;
    height: 100%;
    font-size: 30rpx;
    background-color: whitesmoke;
    color: black;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .confirmButton {
    width: 50%;
    height: 100%;
    font-size: 30rpx;
    background-color: #F9B712;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* 时间选择器样式 */
  .picker-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }
  
  .time-picker {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    z-index: 1000;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
  }
  
  .picker-title {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1px solid #eee;
  }
  
  .picker-cancel, .picker-confirm {
    font-size: 32rpx;
    padding: 10rpx 20rpx;
  }
  
  .picker-cancel {
    color: #666;
  }
  
  .picker-confirm {
    color: #F9B712;
  }
  
  .date-picker {
    padding: 20rpx;
    border-bottom: 1px solid #eee;
  }
  
  .date-picker-inner {
    width: 100%;
  }
  
  .date-picker-text {
    text-align: center;
    font-size: 34rpx;
    padding: 10rpx 0;
  }
  
  .picker-item {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 34rpx;
  }
  