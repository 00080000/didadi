.container {
    background-color: #f5f5f5;
    min-height: 100vh;
    padding-bottom: 120rpx;
  }
  
  .nav-bar {
    display: flex;
    align-items: center;
    height: 100rpx;
    background-color: #fff;
    padding: 0 20rpx;
    border-bottom: 1px solid #eee;
  }
  
  .back-btn {
    width: 60rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .back-icon {
    width: 30rpx;
    height: 30rpx;
  }
  
  .nav-title {
    flex: 1;
    text-align: center;
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
  }
  
  .empty-view {
    width: 60rpx;
  }
  
  .template-info {
    background-color: #fff;
    padding: 25rpx;
    border-bottom: 1px solid #eee;
  }
  
  .template-name {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
    font-weight: 500;
  }
  
  .template-date {
    font-size: 24rpx;
    color: #999;
  }
  
  .preview-container {
    background-color: #fff;
    margin: 20rpx;
    border-radius: 10rpx;
    padding: 30rpx;
  }
  
  .section {
    margin-bottom: 40rpx;
  }
  
  .section:last-child {
    margin-bottom: 0;
  }
  
  .section-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #eee;
  }
  
  .content {
    font-size: 26rpx;
    line-height: 1.8;
    color: #333;
  }
  
  .divider {
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999;
    margin: 30rpx 0;
    position: relative;
  }
  
  .divider::before, .divider::after {
    content: '';
    position: absolute;
    width: 30%;
    height: 1px;
    background-color: #eee;
  }
  
  .divider::before {
    left: 0;
  }
  
  .divider::after {
    right: 0;
  }
  
  .confirm-btn {
    position: fixed;
    bottom: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background-color: #F9B712;
    color: #fff;
    border-radius: 45rpx;
    font-size: 32rpx;
    font-weight: 500;
  }
  