.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    padding: 30rpx 0;
    text-align: center;
    border-bottom: 1px solid #eee;
  }
  
  .section-title {
    font-size: 30rpx;
    color: #666;
    margin: 30rpx 0 20rpx;
    padding-left: 10rpx;
    border-left: 4rpx solid #F9B712;
  }
  
  .info-section, .edit-section {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .info-item, .form-item {
    display: flex;
    padding: 25rpx 0;
    border-bottom: 1px solid #eee;
  }
  
  .info-item:last-child, .form-item:last-child {
    border-bottom: none;
  }
  
  .label, .form-label {
    width: 200rpx;
    font-size: 28rpx;
    color: #666;
    display: flex;
    align-items: center;
  }
  
  .value, .form-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  input, textarea {
    width: 100%;
    font-size: 28rpx;
    padding: 10rpx;
    border: 1px solid #eee;
    border-radius: 6rpx;
    min-height: 60rpx;
  }
  
  .required {
    color: #ff4d4f;
    margin-left: 5rpx;
  }
  
  .btn-group {
    display: flex;
    margin-top: 40rpx;
    padding: 0 20rpx;
  }
  
  .cancel-btn, .save-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 30rpx;
    margin: 0 10rpx;
  }
  
  .cancel-btn {
    background-color: #fff;
    color: #666;
    border: 1px solid #eee;
  }
  
  .save-btn {
    background-color: #F9B712;
    color: #fff;
  }