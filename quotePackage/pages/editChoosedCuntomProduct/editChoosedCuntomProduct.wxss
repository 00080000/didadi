page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.header {
  width: 100%;
  height: 75rpx;
  background-color: #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.inputArea {
  width: 650rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inputArea .label{
  font-size: 27rpx;
}

.input {
  height: 50rpx;
  text-align: left;
  padding: 10rpx 25rpx;
  border: 1px solid lightgray;
  border-radius: 5px;
  font-size: 27rpx;
  font-weight: lighter;
}

.pickerInput {
  height: 50rpx;
  text-align: left;
  padding: 10rpx 25rpx;
  border: 1px solid lightgray;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  font-size: 27rpx;
  font-weight: lighter;
}

.picker {
  height: 50rpx;
  padding: 10rpx 10rpx;
  width: 205rpx;
  background-color: #f0f0f0;
  border: 1px solid lightgray;
  border-left: none;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

.showPickerValue {
  width: 185rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: gray;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.picker image {
  width: 40rpx;
  height: 40rpx;
}

.deleteButton {
  margin-top: 50rpx;
  border: 1px solid red;
  background-color: white;
  color: red;
  width: 300rpx;
  height: 85rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 999px;
  font-weight: lighter;
}

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}