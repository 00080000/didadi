/* quotePackage/pages/editChoosedCombinationProduct/editChoosedCombinationProduct.wxss */
page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.header {
  width: 100%;
  height: 75rpx;
  background-color: #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.inputArea {
  width: 650rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inputArea .label{
  font-size: 27rpx;
}

.input {
  height: 50rpx;
  text-align: left;
  padding: 10rpx 25rpx;
  border: 1px solid lightgray;
  border-radius: 5px;
  font-size: 27rpx;
  font-weight: lighter;
}

.deleteButton {
  margin-top: 50rpx;
  border: 1px solid red;
  background-color: white;
  color: red;
  width: 300rpx;
  height: 85rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 999px;
  font-weight: lighter;
}

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 页面基础样式 */
page {
    background-color: #f5f5f5;
    min-height: 100%;
    font-family: -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  /* 标题样式 */
  .title {
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    padding: 30rpx 0;
    background-color: white;
    border-bottom: 1px solid #eee;
  }
  
  /* 区块样式 */
  .info-section, .products-section {
    margin-top: 20rpx;
    background-color: white;
    padding: 0 30rpx;
  }
  
  /* 区块标题 */
  .section-title {
    font-size: 30rpx;
    font-weight: bold;
    padding: 25rpx 0;
    color: #333;
    border-bottom: 1px solid #eee;
  }
  
  /* 表单项样式 */
  .form-item {
    display: flex;
    padding: 25rpx 0;
    border-bottom: 1px solid #f5f5f5;
    align-items: center;
  }
  
  .form-label {
    width: 200rpx;
    font-size: 28rpx;
    color: #666;
  }
  
  .form-input {
    flex: 1;
  }
  
  .form-input input {
    width: 100%;
    font-size: 28rpx;
    padding: 10rpx 0;
    color: #333;
    border-bottom: 1px solid #eee;
  }
  
  /* 商品列表样式 */
  .product-list {
    padding: 20rpx 0;
  }
  
  .product-item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1px solid #f5f5f5;
  }
  
  .product-info {
    flex: 3;
  }
  
  .product-name {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .product-details {
    font-size: 24rpx;
    color: #666;
    line-height: 1.5;
  }
  
  /* 数量控制样式 */
  .quantity-control {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .quantity-btn {
    width: 50rpx;
    height: 50rpx;
    background-color: #f5f5f5;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #333;
    touch-action: manipulation;
  }
  
  .quantity-input {
    width: 60rpx;
    text-align: center;
    font-size: 28rpx;
    margin: 0 15rpx;
  }
  
  /* 小计样式 */
  .product-subtotal {
    flex: 1;
    text-align: right;
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
  }
  
  /* 总价样式 */
  .total-price {
    padding: 25rpx 0;
    text-align: right;
    font-size: 30rpx;
    font-weight: bold;
    color: #e63946;
    border-top: 2px solid #f5f5f5;
    margin-top: 10rpx;
  }
  
  /* 删除按钮样式 */
  .delete-button-container {
    padding: 30rpx 0;
  }
  
  .delete-btn {
    width: 60%;
    text-align: center;
    font-size: 28rpx;
    color: #e63946;
    padding: 15rpx 0;
    border: 1px solid #e63946;
    border-radius: 8rpx;
    background-color: transparent;
  }
  
  /* 底部按钮组 */
  .btn-group {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
  }
  
  .cancel-btn, .confirm-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 500;
  }
  
  .cancel-btn {
    background-color: white;
    color: #666;
    border-top: 1px solid #eee;
  }
  
  .confirm-btn {
    background-color: #F9B712;
    color: white;
    border-top: 1px solid #F9B712;
  }