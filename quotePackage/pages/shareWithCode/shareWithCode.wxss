page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content {
  margin:40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}  

.information {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  color: #23394D;
}  

.editButton {
  float: right;
}

.editButton button {
  padding: 7rpx 35rpx;
  background-color: #DDDDDD;
  border: 1px solid #23394D;
  color: #23394D;
  font-weight: lighter;
  font-size: 23rpx;
}

.code {
    width: 400rpx; /* 适当增大尺寸 */
    height: 400rpx;
    background-color: #ffffff; /* 改为白色背景，避免与二维码颜色冲突 */
    margin: 0 auto;
    margin-top: 100rpx;
    padding: 20rpx; /* 增加内边距，避免边框遮挡 */
  }

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}