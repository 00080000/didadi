<!--quotePackage/pages/addQuotation/addQuotation.wxml-->
<view class="container">
  <!-- 上方的Logo与文字提示部分 -->
  <view class="topArea">
    <header></header>
    <view class="content">
      <view class="information">
        <view style="font-size: 30rpx;font-weight: bolder;">{{item.name}}</view>
        <view style="font-size: 27rpx;margin-top: 30rpx;">{{item.projectName}}</view>
        <view style="font-size: 27rpx;margin-top: 30rpx;">报价日期：{{item.quoteDate}}</view>
      </view>
      <view class="editButton">
        <button size="mini" bind:tap="goToEditFileInformation">修改文档信息</button>
      </view>
    </view>
  </view>
  <view class="list">
    <view class="item" wx:if="{{item==null}}" bind:tap="goToChooseMerchant">
      <view class="graySidebar"></view>
        <view class="add">
          添加商家
        <image src="/static/rightArrow-gray.png"></image>
        </view>
    </view>
    <view class="item" wx:if="{{item!=null}}" bind:tap="goToChooseMerchant">
      <view class="cardLeft">
        <view class="blueSideBar"></view>
        <view class="cardContent">
          <view style="font-size: 25rpx;">{{item.companyName}}</view>
          <view style="font-size: 22rpx;">{{item.linkMan}}，{{item.linkTel}}</view>
        </view>
      </view>
      <view class="add">
        <image src="/static/rightArrow-gray.png"></image>
      </view>
    </view>
    <view class="item" wx:if="{{product.length==0}}" bind:tap="goToChooseProduct">
      <view class="graySidebar"></view>
      <view class="add">
        添加商品
        <image src="/static/rightArrow-gray.png"></image>
      </view>
    </view>
    <view class="item" wx:if="{{product.length!=0}}" bind:tap="goToChooseProduct">
      <view class="cardLeft">
        <view class="blueSideBar"></view>
        <view class="cardContent">
          <view style="font-size: 25rpx;">
            合计：￥ {{item.amountPrice}} 元
          </view>
        </view>
      </view>
      <view class="add">
        <image src="/static/rightArrow-gray.png"></image>
      </view>
    </view>
    <view class="item" wx:if="{{attachment.length==0}}" bind:tap="goToAddAttachment">
      <view class="graySidebar"></view>
      <view class="add">
        添加附件
        <image src="/static/rightArrow-gray.png"></image>
      </view>
    </view>
    <view class="item" wx:if="{{attachment.length!=0}}" bind:tap="goToAddAttachment">
      <view class="cardLeft">
        <view class="blueSideBar"></view>
        <view class="cardContent">
          <view style="font-size: 25rpx;">
            附件文件：{{attachment.length}} 个
          </view>
        </view>
      </view>
      <view class="add">
        <image src="/static/rightArrow-gray.png"></image>
      </view>
    </view>
  </view>
  <view class="buttonGroup">
    <view class="cancelButton" bind:tap="cancel">
      取消
    </view>
    <view class="confirmButton" bind:tap="confirm">
      保存/分享
    </view>
  </view>
</view>