page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 上方区域的logo 与 文字*/
.logoArea{
  display: flex;
  align-items: flex-end;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.logo {
  width: 300rpx;
  height: 75rpx;
}

.address {
  font-size: 25rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  font-weight: 500;
}

.agreementName {
  font-size: 45rpx;
  font-weight: bold;
  text-align: left;
  margin-left: 20rpx;
  margin-top: 50rpx;
}

.tip {
  font-size: 25rpx;
  text-align: left;
  margin-left: 20rpx;
  margin-top: 75rpx;
}

/* 下方区域 */
.bottomArea{
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}