page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 上方区域的logo 与 文字*/
.logo {
  width: 400rpx;
  height: 100rpx;
  margin: 20rpx auto;
}

.beta {
  font-size: 35rpx;
  color: #23394D;
  margin-top: 10rpx;
  font-weight: 500;
}

.subtitle {
  color: gray;
  font-size: 25rpx;
  margin-top: 30rpx;
}

.link {
  color: gray;
  font-size: 25rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

/* 下方区域 */
.bottomArea{
  height: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 按钮组 */
.buttonGroup {
  padding-top: 25%;
}

.loginWithWechat {
  background-color: #F9B712;
  color:white;
  font-size: 30rpx;
  font-weight:500;
  height: 90rpx;
  border-radius: 999rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginWithPhone {
  background-color: whitesmoke;
  font-weight: lighter;
  font-size: 30rpx;
  height: 90rpx;
  border-radius: 999rpx;
  margin: 35rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.register {
  color: gray;
  display: flex;
  justify-content: center;
  font-size: 27rpx;
}

/* 同意协议 */
.agreement {
  padding-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #333;
}

.agreement navigator {
  margin-left: 10rpx;
  color: #F9B712;
}