/* mainPackage/pages/watch/watch.wxss */
page{
    text-align: center;
    width: 100%;
    height: 100%;
    background-color: white;
    position: relative;
  }
  
  /* 上方区域 */
  .topArea {
    width: 100%;
    height: 25%;
    background-color: #DDDDDD;
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  /* 上方区域的logo 与 文字*/
  .logoArea{
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-top: 10rpx;
  }
  
  .logo {
    width: 300rpx;
    height: 75rpx;
    margin-left: 30rpx;
  }
  
  .address {
    font-size: 25rpx;
    margin-bottom: 10rpx;
    margin-left: 30rpx;
    font-weight: 500;
  }
  
  .search {
    width: 75rpx;
    height: 75rpx;
    margin-right: 20rpx;
  }
  
  .userArea {
    margin: 20rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 50rpx;
  }
  
  .userInformation {
    display: flex;
    align-items: center;
    margin-left: 40rpx;
  }
  
  .avatarArea {
    display: flex;
    align-items: flex-end;
  }
  
  .avatar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 999px;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .avatar image {
    width: 75%;
    height: 75%;
  }
  
  .avatarEdit {
    width: 40rpx;
    height: 40rpx;
  }
  
  .wordArea {
    margin-left: 70rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    height: 150rpx;
  }
  
  .table {
    width: 90%;
    margin-left: 5%;
    margin-top: 2.5%;
  }
  
  .message {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid lightgray;
  }
  
  .header {
    width: 100%;
    height: 85rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5rpx;
  }
  
  .header .title {
    font-size: 27rpx;
    margin-left: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  
  .header image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    margin-top: 5rpx;
  }
  
  .content {
    text-align: left;
    padding: 5rpx 10rpx 25rpx 10rpx;
    font-size: 25rpx;
  }
  
  .content button {
    margin-top: 25rpx;
    float: right;
    font-size: 25rpx;
    padding: 5rpx 30rpx;
  }
  .no-message {
      width: 100%;
      height: 100rpx;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 28rpx;
      color: #999;
      margin-top: 50rpx;
    }