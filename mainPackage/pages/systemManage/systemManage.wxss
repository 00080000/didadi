/* mainPackage/pages/systemManage/systemManage.wxss */
page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 上方区域的logo 与 文字*/
.logoArea{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 10rpx;
}

.logo {
  width: 300rpx;
  height: 75rpx;
  margin-left: 30rpx;
}

.address {
  font-size: 25rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  font-weight: 500;
}

.search {
  width: 75rpx;
  height: 75rpx;
  margin-right: 20rpx;
}

.userArea {
  margin: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.userInformation {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.avatarArea {
  display: flex;
  align-items: flex-end;
}

.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 999px;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar image {
  width: 75%;
  height: 75%;
}

.avatarEdit {
  width: 40rpx;
  height: 40rpx;
}

.wordArea {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  height: 150rpx;
}

.rightArrow {
  width: 40rpx;
  height: 40rpx;
  margin-right: 60rpx;
}

.cardList {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  width: 660rpx;
  margin-left: 45rpx;
}  

.card {
  width: 250rpx;
  height: 240rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  padding: 30rpx;
  -webkit-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  -moz-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
}

.card image{
  width: 75rpx;
  height: 75rpx;
}

.card .title {
  font-size: 27rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.card .content {
  font-size: 21rpx;
  color: gray;
  margin-left: 10rpx;
  text-align: left;
}

.message {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.newMessageAmount {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid red;
  border-radius: 999px;
  color: red;
  font-size: 27rpx;
}
