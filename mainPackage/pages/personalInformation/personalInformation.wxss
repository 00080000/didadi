page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 上方区域的logo 与 文字*/
.logoArea{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 10rpx;
}

.logo {
  width: 300rpx;
  height: 75rpx;
  margin-left: 30rpx;
}

.address {
  font-size: 25rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  font-weight: 500;
}

.search {
  width: 75rpx;
  height: 75rpx;
  margin-right: 20rpx;
}

.userArea {
  margin: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.userInformation {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.avatarArea {
  display: flex;
  align-items: flex-end;
}

.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 999px;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar image {
  width: 75%;
  height: 75%;
}

.avatarEdit {
  width: 40rpx;
  height: 40rpx;
}

.wordArea {
  margin-left: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  height: 150rpx;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.inputArea {
  border-bottom: 1px lightgray solid;
  width: 600rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inputArea .label{
  margin-left: 10rpx;
  font-size: 27rpx;
}

.input {
  height: 70rpx;
  font-size: 27rpx;
  font-weight: lighter;
  text-align: left;
  padding: 10rpx 25rpx;
}

.selectSex {
  height: 70rpx;
  width: 400rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  padding: 10rpx 25rpx;
}

.selectedSex {
  background-color: #F9B712;
  color: white;
  border-radius: 5px;
  height: 60rpx;
  width: 125rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 27rpx;
}

.notSelectedSex {
  background-color: white;
  color: gray;
  border-radius: 5px;
  border: 1rpx solid gray;
  height: 60rpx;
  width: 125rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 100;
  font-size: 27rpx;
}

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}