page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 15%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.add {
  position: absolute;
  right: 30rpx;
  top: 13.5%;
  height: 120rpx;
  width: 120rpx;
  background-color: #F9B712;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 27rpx;
  border-radius: 99rpx;
  box-shadow:0 1px 5px gray;
}


.addNewItem {
  position: absolute;
  top:23%;
  right: 30rpx;
  background-color: #DDDDDD;
  border-radius: 10px;
  height: 170rpx;
  width: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx;
}

.newItem {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 25rpx;
  color: #23394D;
}

.newItem image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 30rpx;
  margin-left: 20rpx;
}

.content {
  margin:20rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
  justify-content: space-between;
}  

.information {
  font-size: 35rpx;
  font-weight: bolder;
  color: #23394D;
}  

.productButton {
  margin-top: 50rpx;
  display: flex;
  align-items: center;
}

.productButton button{
  background-color: #DDDDDD;
  color: #23394D;
  border-radius: 5px;
  border: 1px solid #23394D;
  font-size: 25rpx;
  font-weight: lighter;
  padding: 5rpx 35rpx;
  margin-right: 30rpx;
}

.productList {
  width: 700rpx;
  margin: 75rpx 25rpx;
  padding-top: 10rpx;
  max-height: 56%;
  overflow: auto;
}

.card {
  width: 650rpx;
  height: 110rpx;
  margin: 0 25rpx 40rpx 25rpx;
  border-radius: 5px;
  -webkit-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  -moz-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cardLeft {
  height: 100%;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  display: flex;
  align-items: center;
}

.blueSidebar {
  height: 100%;
  width: 55rpx;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  background-color: #23394D;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.blueSidebar image {
  width: 35rpx;
  height: 35rpx;
}

.productInformation {
  height: 100%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  color: #23394D;
}

.productInformation .name {
  font-size: 26rpx;
  margin-top: 15rpx;
}

.productInformation .price {
  font-size: 23rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
  width: 275rpx;
}

.cardRight {
  width: 55rpx;
  height: 100%;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  background-color: lightgray;
  color: gray;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cardRight image {
  width: 50rpx;
  height: 50rpx;
}

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}