page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.information {
  text-align: left;
  margin-left: 30rpx;
  font-size: 35rpx;
  font-weight: bolder;
  color: #23394D;
}

.fileLength {
  color: #23394D;
  font-size: 27rpx;
  text-align: left;
  margin: 20rpx 30rpx;
}

.fileList {
  width: 690rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
}

.fileCard {
  width: 100%;
  padding: 5rpx 10rpx;
  margin-top: 20rpx;
  height: 80rpx;
  border-bottom: 1px solid lightgray;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.fileCard image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 5rpx;
}

.fileInformation {
  display: flex;
  align-items: center;
  margin-left: 5rpx;
}

.fileInformation view {
  margin-left: 15rpx;
  font-size: 25rpx;
}