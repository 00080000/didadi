page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

/* 上方区域 */
.topArea {
  width: 100%;
  height: 25%;
  background-color: #DDDDDD;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.add {
  position: absolute;
  right: 30rpx;
  top: 23.5%;
  height: 120rpx;
  width: 120rpx;
  background-color: #F9B712;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 30rpx;
  border-radius: 99rpx;
  box-shadow:0 1px 5px gray;
}

.firm {
  margin: 60rpx 30rpx;
  text-align: left;
  font-size: 33rpx;
  font-weight: bolder;
  color: #23394D;
}

.search {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 70rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.searchText {
  margin-left: 25rpx;
  font-size: 30rpx;
}

.inputArea {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 60rpx;
  padding: 5rpx 10rpx;
  background-color: white;
  border-radius: 5px;
}

.inputArea input {
  font-size: 25rpx;
  text-align: left;
  padding: 0 10rpx;
}

.inputArea image {
  width: 40rpx;
  height: 40rpx;
}

form button {
  background-color: #DDDDDD;
  font-weight: lighter;
  color: #23394D;
}

.contactList{
  width: 700rpx;
  margin: 75rpx 25rpx;
  padding-top: 10rpx;
  max-height: 56%;
  overflow: auto;
}

.contactCard {
  width: 650rpx;
  height: 110rpx;
  margin: 0 25rpx 40rpx 25rpx;
  border-radius: 5px;
  -webkit-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  -moz-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.cardLeft {
  height: 100%;
  display: flex;
}

.blueSideBar {
  width: 65rpx;
  height: 100%;
  background-color: #23394D;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.blueSideBar view {
  width: 30rpx;
  height: 30rpx;
  border-radius: 999rpx;
  border: white solid 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 23rpx;
  font-weight: bolder;
}

.graySideBar {
  width: 65rpx;
  height: 100%;
  background-color: lightgray;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.graySideBar view {
  width: 30rpx;
  height: 30rpx;
  border-radius: 999rpx;
  border: white solid 3px;
}

.information {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}