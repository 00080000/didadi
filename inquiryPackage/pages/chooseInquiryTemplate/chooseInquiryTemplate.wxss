/* quotePackage/pages/chooseQuotationTemplate/chooseQuotationTemplate.wxss */
page{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: white;
  position: relative;
}

.header {
  width: 100%;
  height: 75rpx;
  background-color: #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.templateList{
  width: 700rpx;
  margin: 50rpx 25rpx;
  padding-top: 10rpx;
  max-height: 56%;
  overflow: auto;
}

.templateCard {
  width: 650rpx;
  height: 110rpx;
  margin: 0 25rpx 40rpx 25rpx;
  border-radius: 5px;
  -webkit-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  -moz-box-shadow: 0px 0px 10rpx 3rpx lightgray;
  box-shadow: 0px 0px 10rpx 3rpx lightgray;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.cardLeft {
  height: 100%;
  display: flex;
}

.blueSideBar {
  width: 65rpx;
  height: 100%;
  background-color: #23394D;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.blueSideBar view {
  width: 30rpx;
  height: 30rpx;
  border-radius: 999rpx;
  border: white solid 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 23rpx;
  font-weight: bolder;
}

.graySideBar {
  width: 65rpx;
  height: 100%;
  background-color: lightgray;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.graySideBar view {
  width: 30rpx;
  height: 30rpx;
  border-radius: 999rpx;
  border: white solid 3px;
}

.information {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-left: 20rpx;
}

.operation {
  display: flex;
  align-items: center;
  margin:15rpx;
}

.operation button {
  width: 150rpx;
  height: 50rpx;
  background-color: white;
  border-radius: 5px;
  border: 1px solid #23394D;
  font-size: 22rpx;
  font-weight: lighter;
  color: #23394D;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buttonGroup {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.cancelButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: whitesmoke;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirmButton {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  background-color: #F9B712;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}